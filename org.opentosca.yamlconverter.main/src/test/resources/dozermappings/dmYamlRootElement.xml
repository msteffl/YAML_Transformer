<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <custom-converters>
            <converter type="org.opentosca.yamlconverter.main.SimpleCustomConverter">
                <class-a>org.opentosca.yamlconverter.yamlmodel.yaml.element.YAMLFileRoot</class-a>
                <class-b>org.opentosca.model.tosca.TDefinitions</class-b>
            </converter>
        </custom-converters>
    </configuration>

    <mapping>
        <class-a>org.opentosca.model.tosca.TestRoot</class-a>
        <class-b>org.opentosca.model.yaml.YamlRootElement</class-b>
        <field>
            <a is-accessible="true">description</a>
            <b is-accessible="true">description</b>
        </field>
    </mapping>

    <mapping>
        <class-a>org.opentosca.yamlconverter.yamlmodel.yaml.element.YAMLFileRoot</class-a>
        <class-b>org.opentosca.model.tosca.TDefinitions</class-b>
    </mapping>

</mappings>
